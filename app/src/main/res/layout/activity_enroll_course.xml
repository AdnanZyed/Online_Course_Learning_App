<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    tools:context=".EnrollCourseActivity">



    <ImageView
        android:id="@+id/back_icon_enrollCourse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/more_icon_enroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_enroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="serif"
        android:text="Enroll Course"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/back_icon_enrollCourse"
        app:layout_constraintStart_toEndOf="@id/back_icon_enrollCourse"
        app:layout_constraintTop_toTopOf="@+id/back_icon_enrollCourse" />

    <TextView
        android:id="@+id/text_enroll2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="serif"

        android:text="Select the payment method you want to use"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_enroll"

        />

    <androidx.cardview.widget.CardView
        android:id="@+id/card2"
        android:layout_width="370dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_enroll2">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="50dp"
            android:padding="4dp"

            android:src="@drawable/paypal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="100dp"
            android:text="Paypal"
            android:textColor="@color/black"
            android:textSize="22dp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card3"
        android:layout_width="370dp"
        android:layout_height="80dp"
        android:layout_marginTop="15dp"
        android:elevation="1dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card2">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="50dp"
            android:padding="4dp"

            android:src="@drawable/google" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="100dp"
            android:text="Google Pay"
            android:textColor="@color/black"
            android:textSize="22dp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card4"
        android:layout_width="370dp"
        android:layout_height="80dp"
        android:layout_marginTop="15dp"
        android:elevation="1dp"

        app:cardCornerRadius="15dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card3">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="50dp"
            android:padding="4dp"

            android:src="@drawable/apple" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="100dp"
            android:text="Apple Pay"
            android:textColor="@color/black"
            android:textSize="22dp" />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/card5"
        android:layout_width="370dp"
        android:layout_height="80dp"
        android:layout_marginTop="15dp"
        android:elevation="1dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card4">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="50dp"
            android:padding="4dp"

            android:src="@drawable/card" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="100dp"
            android:text="... ...4679"
            android:textColor="@color/black"
            android:textSize="22dp" />

    </androidx.cardview.widget.CardView>
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/card5"
        app:layout_constraintEnd_toEndOf="@+id/card3"
        app:layout_constraintTop_toTopOf="@+id/card2">

        <RadioButton
            android:id="@+id/g_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"

            />

        <RadioButton
            android:id="@+id/a_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"

            />

        <RadioButton
            android:id="@+id/p_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"

            />

        <RadioButton
            android:id="@+id/c_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTintMode="@color/blue"
            android:layout_weight="4"

            />


    </RadioGroup>

    <Button
        android:id="@+id/bt_buy2"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_margin="30dp"
        android:background="@drawable/catigories_btn_selected"
        android:elevation="30dp"
        android:text="Enroll Course-$"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />

    <Button
        android:id="@+id/add_cart"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_margin="30dp"
        android:background="@drawable/btn_cart"
        android:elevation="0dp"
        android:text="Add New Card"
        android:textColor="@color/green"
        app:layout_constraintBottom_toTopOf="@+id/bt_buy2"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card5" />
</androidx.constraintlayout.widget.ConstraintLayout>