<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".AboutFragment">

    <TextView
        android:id="@+id/t_mentor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="32dp"
        android:text="Mentor"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/iv_teacher_image13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="500dp"
        app:cardElevation="0dp"
android:layout_margin="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/t_mentor">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profile"
            app:layout_constraintTop_toBottomOf="@+id/t_mentor"
            app:shapeAppearanceOverlay="@style/RoundedImage"
            app:strokeColor="@color/black"

            app:strokeWidth="2dp"

            />

    </androidx.cardview.widget.CardView>



    <TextView
        android:id="@+id/teacher_name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Teacher Name"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/iv_teacher_image13"
        app:layout_constraintTop_toTopOf="@+id/iv_teacher_image13" />

    <TextView
        android:id="@+id/teacher_magor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Teacher magor"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/iv_teacher_image13"
        app:layout_constraintTop_toBottomOf="@+id/teacher_name1" />

    <ImageView
        android:id="@+id/message_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:background="@drawable/chat"

        app:layout_constraintBottom_toBottomOf="@+id/teacher_magor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/teacher_name1" />
    <TextView
        android:id="@+id/about_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="About Course"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_teacher_image13" />

    <TextView
        android:id="@+id/description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:text="Description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/about_course"


        />


</androidx.constraintlayout.widget.ConstraintLayout>