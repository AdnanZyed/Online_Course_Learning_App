<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnrollCodeActivity">

    <!-- أيقونة الرجوع -->
    <ImageView
        android:id="@+id/back_icon_enroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- عنوان الصفحة -->
    <TextView
        android:id="@+id/text_enroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="serif"
        android:text="Enroll Course"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/back_icon_enroll"
        app:layout_constraintStart_toEndOf="@id/back_icon_enroll"
        app:layout_constraintTop_toTopOf="@id/back_icon_enroll" />

    <!-- تعليمات إدخال الكود -->

    <!-- حقول إدخال كود التحقق -->

    <TextView
        android:id="@+id/text_enroll2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="144dp"
        android:fontFamily="serif"
        android:text="Select the payment method you want to use"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_enroll" />

    <EditText
        android:id="@+id/otp_digit_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/otp_background"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:layout_marginTop="200dp"
        android:textSize="18sp"
        android:imeOptions="actionNext"
        app:layout_constraintEnd_toStartOf="@id/otp_digit_2"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_enroll2" />

    <EditText
        android:id="@+id/otp_digit_2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/otp_background"
        android:gravity="center"
        android:inputType="number"
        android:layout_marginTop="200dp"

        android:maxLength="1"
        android:textSize="18sp"
        android:imeOptions="actionNext"
        app:layout_constraintEnd_toStartOf="@id/otp_digit_3"
        app:layout_constraintStart_toEndOf="@id/otp_digit_1"
        app:layout_constraintTop_toBottomOf="@id/text_enroll2" />

    <EditText
        android:id="@+id/otp_digit_3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/otp_background"
        android:gravity="center"
        android:layout_marginTop="200dp"

        android:inputType="number"
        android:maxLength="1"
        android:textSize="18sp"
        android:imeOptions="actionNext"
        app:layout_constraintEnd_toStartOf="@id/otp_digit_4"
        app:layout_constraintStart_toEndOf="@id/otp_digit_2"
        app:layout_constraintTop_toBottomOf="@id/text_enroll2" />

    <EditText
        android:id="@+id/otp_digit_4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/otp_background"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:layout_marginTop="200dp"

        android:textSize="18sp"
        android:imeOptions="actionDone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/otp_digit_3"
        app:layout_constraintTop_toBottomOf="@id/text_enroll2" />

    <!-- زر تأكيد التسجيل -->
    <Button
        android:id="@+id/bt_buy1"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:background="@drawable/catigories_btn_selected"
        android:elevation="30dp"
        android:text="Continue"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
