<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- الخلفية -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="#E2E2E2" />
        </shape>
    </item>

    <!-- الشريط المتقدم -->
    <item>
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="8dp" />
                <solid android:color="@color/blue" />
            </shape>
        </clip>
    </item>

</layer-list>
